<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="2">

        <RelativeLayout
            android:id="@+id/rl_question_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_question_user_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/header_profile" />


            <TextView
                android:id="@+id/tv_question_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_question_user_pic"
                android:padding="5dp"
                android:text="用户名"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_question_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_question_username"
                android:padding="5dp"
                android:text="2018-11-30"
                android:textColor="@color/gray_text" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_question_user_info"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="100"
            android:textColor="@color/gray_text" />


        <RelativeLayout
            android:id="@+id/rl_question_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_question_title"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_question_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_question_state"
                android:text="优先级" />

            <TextView
                android:id="@+id/tv_question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_question_priority"
                android:background="@drawable/shape_question_state"
                android:text="类型" />

            <TextView
                android:id="@+id/tv_question_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_question_type"
                android:background="@drawable/shape_question_state"
                android:text="专业" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pic_video"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_weight="2"
        android:scaleType="centerCrop" />
</RelativeLayout>